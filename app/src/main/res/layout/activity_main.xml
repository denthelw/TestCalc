<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayBTN"
        app:layout_constraintVertical_bias="0.95"
        tools:layout_editor_absoluteX="0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/clearBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circke"
                android:text="@string/clear"
                android:textSize="24sp"
                android:textColor="#FFFFFF" />


            <Button
                android:id="@+id/parenthesesBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circke"
                android:text="@string/parentheses"
                android:textSize="24sp"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/explonetBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circke"
                android:textSize="24sp"
                android:text="@string/explonet"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/divideBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="70dp"
                android:textSize="24sp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/circke"
                android:text="@string/divide"
                android:textColor="#FFFFFF" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/sevenBTN"
                android:textSize="24sp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seven"
                android:textColor="#FFFFFF"
                android:layout_margin="5dp"
                android:background="@drawable/circke"/>

            <Button
                android:id="@+id/eightBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="24sp"
                android:text="@string/eight"
                android:textColor="#FFFFFF"
                android:layout_margin="5dp"
                android:background="@drawable/circke" />

            <Button
                android:id="@+id/nineBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:text="@string/nine"
                android:textColor="#FFFFFF"
                android:background="@drawable/circke" />

            <Button
                android:id="@+id/multiplyBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:background="@drawable/circke"
                android:text="@string/multiply"
                android:textColor="#FFFFFF" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/fourBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:layout_weight="1"
                android:text="@string/four"
                android:textColor="#FFFFFF"
                android:background="@drawable/circke"/>

            <Button
                android:id="@+id/fiveBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/five"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/circke" />

            <Button
                android:id="@+id/sixBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/six"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/circke" />

            <Button
                android:id="@+id/subtractBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/subtract"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/circke" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/oneBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textSize="24sp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/one"
                android:textColor="#FFFFFF"
                android:background="@drawable/circke" />

            <Button
                android:id="@+id/twoBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/two"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/circke" />

            <Button
                android:id="@+id/treeBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/tree"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/circke" />

            <Button
                android:id="@+id/addBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/add"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/circke" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/plusMinusBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/circke"
                android:text="@string/plusMinus" />

            <Button
                android:id="@+id/zeroBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textSize="24sp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/zero"
                android:textColor="#FFFFFF"
                android:background="@drawable/circke"/>

            <Button
                android:id="@+id/pointBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/point"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/circke" />

            <Button
                android:id="@+id/equalsBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/circke"
                android:text="@string/equals" />
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/displayBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/display"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="false"
        android:inputType="none"
        android:textSize="24sp"        tools:ignore="LabelFor" />

    <ImageButton
        android:id="@+id/backspaceBTN"
        style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/circke"
        android:text="@string/backspace"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/backspace"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>